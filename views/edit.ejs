<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">

    <title>메인페이지</title>
  </head>
  <body>
    <%- include('nav.html') %>
    <div class="container mt-4" style="max-width: 600px;">
      <form action="/edit?_method=PUT" method="POST">
        <h4 class="text-center">수업기록장</h4>
        <input type="text" value="<%= editlog.id %>" name="id" style="display: none;">
      <label class="form-label mt-3">수업명</label>
      <select class="form-select form-select-sm" name="classname">
        <option selected><%= editlog.classname %></option>
      </select>
      <label class="form-label mt-3">수업차시</label>
      <select class="form-select form-select-sm" name="classtime">
        <option selected><%= editlog.classtime %></option>
      </select>
    <div class="mb-3">
      <label class="form-label mt-3">발표내용 기록</label>
      <textarea class="form-control" rows="5" name="classnote"><%= editlog.classnote %></textarea>
    </div>
    <div class="d-grid gap-2">
      <button type="submit" class="b tn btn-primary mt-3">수정</button>
    </div>
  </form>
  </div>


    
    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
